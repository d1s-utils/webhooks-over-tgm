<databaseChangeLog
        xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="https://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="0" author="d1snin (me@d1s.dev)">
        <createSequence incrementBy="1" sequenceName="system-uuid" startValue="1"/>

        <createTable tableName="delivery">
            <column name="id" type="text">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_delivery"/>
            </column>
            <column name="content" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="successful" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="webhook_id" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="target">
            <column name="id" type="text">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_target"/>
            </column>
            <column name="chat_id" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="available" type="bool">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="webhook">
            <column name="id" type="text">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_webhook"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="nonce" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="bot_token" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="private" type="bool">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="webhook_target">
            <column name="webhook_id" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="target_id" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint constraintName="u_webhook_name" tableName="webhook" columnNames="name"/>
        <addUniqueConstraint constraintName="u_webhook_nonce" tableName="webhook" columnNames="nonce"/>

        <addForeignKeyConstraint baseTableName="delivery"
                                 baseColumnNames="webhook_id"
                                 constraintName="fk_delivery_webhook"
                                 referencedTableName="webhook"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="webhook_target"
                                 baseColumnNames="webhook_id"
                                 constraintName="fk_webhook_target_webhook"
                                 referencedTableName="webhook"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="webhook_target"
                                 baseColumnNames="target_id"
                                 constraintName="fk_webhook_target_target"
                                 referencedTableName="target"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>